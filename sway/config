## Sway Master configuration file

## Monitors
set $primary_monitor DP-2
set $secondary_monitor eDP-1

## Workspace Assignments
workspace 1 output $primary_monitor $secondary_monitor
workspace 2 output $primary_monitor $secondary_monitor
workspace 3 output $primary_monitor $secondary_monitor
workspace 4 output $secondary_monitor
workspace 5 output $secondary_monitor
workspace 6 output $secondary_monitor

##-- Mod Keys ----------------------------
set $mod Mod4
set $alt Mod1

##-- Fonts (Global) ----------------------
font pango:JetBrains Mono Medium 10

##-- Config files ------------------------
include ~/.dotfiles/sway/sway-idle
include ~/.dotfiles/sway/sway-input
include ~/.dotfiles/sway/sway-output
include ~/.dotfiles/sway/sway-modes
include ~/.dotfiles/sway/sway-theme

##-- General Settings --------------------
default_orientation horizontal
swaybg_command swaybg
swaynag_command swaynag
workspace_layout default
focus_follows_mouse yes

##-- Variables ---------------------------
set $term ~/.dotfiles/sway/scripts/terminal
set $clam ~/.dotfiles/sway/scripts/clamshell
set $menu ~/.dotfiles/sway/scripts/menu
set $powermenu ~/.dotfiles/sway/scripts/powermenu
set $volume ~/.dotfiles/sway/scripts/volume
set $screenshot ~/.dotfiles/sway/scripts/screenshot
set $lockscreen ~/.dotfiles/sway/scripts/lockscreen
set $wlogout ~/.dotfiles/sway/scripts/wlogout
set $backlight ~/.dotfiles/sway/scripts/brightness
set $files thunar
set $editor geany
set $browser ~/.dotfiles/sway/scripts/browser

##-- Startup Programs --------------------
exec_always ~/.dotfiles/sway/scripts/startup

set $imp_vars "DISPLAY WAYLAND_DISPLAY SWAYSOCK SSH_AUTH_SOCK XDG_CURRENT_DESKTOP XDG_SESSION_TYPE"
exec_always systemctl --user import-environment "$imp_vars"
exec_always hash dbus-update-activation-environment 2>/dev/null && \
    dbus-update-activation-environment --systemd "$imp_vars"
##-- Keybindings -------------------------

# -- Terminal --
bindsym $mod+Return 			exec $term
bindsym $mod+Shift+Return 		exec $term -f
bindsym $mod+$alt+Return 		exec $term -s

# -- Apps --
bindsym $mod+Shift+f 			exec $files
bindsym $mod+Shift+w 			exec $browser

# -- Wofi --
bindsym $mod+d	 				exec $menu

# -- Misc --
bindsym $mod+x 					exec $wlogout

# -- Function keys --
bindsym XF86MonBrightnessUp 	exec "$backlight --inc"
bindsym XF86MonBrightnessDown exec "$backlight --dec"
bindsym XF86AudioRaiseVolume 	exec "$volume --inc"
bindsym XF86AudioLowerVolume 	exec "$volume --dec"
bindsym XF86AudioMute 			  exec "$volume --toggle"
bindsym XF86AudioPrev         exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym XF86AudioNext         exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym XF86AudioPlay    exec  	"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

# -- Screenshots --
bindsym Control+Print 			exec "$screenshot --win"
bindsym $alt+Control+p 		exec "$screenshot --area"

# -- Sway --
# Lockscreen
bindsym $alt+Control+l 			exec "$lockscreen"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod normal

# kill focused window
bindsym $mod+Control+q kill

# reload the configuration file
bindsym $mod+Shift+c reload

# -- Moving around -
# change focus
bindsym $mod+n focus left
bindsym $mod+e focus down
bindsym $mod+i focus up
bindsym $mod+o focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+n move left
bindsym $mod+Shift+e move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+o move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# -- Workspaces --
# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6

# -- Layout stuff --
# split in horizontal orientation
bindsym $mod+b splith

# split in vertical orientation
bindsym $mod+v splitv

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+space floating toggle


# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child

# -- Scratchpad --
# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

##-- Rules -------------------------------
assign [app_id="Slack"] → workspace number 4
assign [app_id="jamesdsp"] → workspace number 3
assign [app_id="spotify"] → workspace number 3
for_window [app_id="blueman-manager"] floating enable, floating_minimum_size 600 x 400
for_window [app_id="pavucontrol"] floating enable, sticky enable, resize set width 550 px height 600px, move position cursor, move down 35
for_window [app_id="org.kde.kde-connect-indicator"] floating enable, floating_minimum_size 800 x 600
for_window [app_id="com.moonlight_stream.Moonlight"] floating enable, floating_minimum_size 800 x 600

for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [app_id="foot-float"] floating enable
for_window [app_id="yad|nm-connection-editor|pavucontrol"] floating enable
for_window [app_id="xfce-polkit|kvantummanager|qt5ct"] floating enable
for_window [class="feh|Viewnior|Gpicview|Gimp|MPlayer"] floating enable
for_window [class="VirtualBox Manager|qemu|Qemu-system-x86_64"] floating enable

for_window [app_id="evolution" title="Meeting(.*)"] border none, floating enable
# For specific Zoom windows
for_window [app_id="zoom" title="^(Zoom|About)$"] border pixel, floating enable
for_window [app_id="zoom" title="Settings"] floating enable, floating_minimum_size 960 x 700
# Open Zoom Meeting windows on a new workspace (a bit hacky)
for_window [app_id="zoom" title="Zoom Meeting(.*)?"] border pixel, floating enable

##-- Misc --------------------------------
include /etc/sway/config.d/*
